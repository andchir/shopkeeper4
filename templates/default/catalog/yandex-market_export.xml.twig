<?xml version="1.0" encoding="UTF-8"?>
<yml_catalog date="{{ 'now' | date('Y-m-d H:i:s') }}">
    <shop>
        <name>{{ app_name }}</name>
        <company>{{ app_name }}</company>
        <url>{{ absolute_url('/') }}</url>
        <currencies>
            <currency id="RUR" rate="1"/>
        </currencies>
        <categories>
            {% for category in categories -%}
            <category id="{{ category.id }}">{{ category.title }}</category>
            {% endfor -%}
        </categories>
        <delivery-options>
            {% for delivery in deliverySettings -%}
                {% if delivery.options.price.value > 0 -%}
                <option cost="{{ delivery.options.price.value }}" days="7"/>
                {% endif -%}
            {% endfor -%}
        </delivery-options>
        <offers>
            <offer id="9012">
                <name>Мороженица Brand 3811</name>
                <url>http://best.seller.ru/product_page.asp?pid=12345</url>
                <price>8990</price>
                <currencyId>RUR</currencyId>
                <categoryId>10</categoryId>
                <delivery>true</delivery>
                <delivery-options>
                    <option cost="300" days="1" order-before="18"/>
                </delivery-options>
                <param name="Цвет">белый</param>
                <weight>3.6</weight>
                <dimensions>20.1/20.551/22.5</dimensions>
            </offer>
        </offers>
        <gifts/>
        <promos/>
    </shop>
</yml_catalog>